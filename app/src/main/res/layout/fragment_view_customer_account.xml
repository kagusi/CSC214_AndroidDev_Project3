<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout android:focusable="true"
                  android:focusableInTouchMode="true"
                  android:layout_width="0px"
                  android:layout_height="0px" >
        <requestFocus />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:layout_marginBottom="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:padding="10dp"
            android:background="@drawable/innercustom_border">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="#4CAF50"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DELIVERY ADDRESS"
                    android:layout_gravity="center"
                    android:layout_marginTop="6dp"
                    android:textSize="20sp"
                    android:textColor="#f9f7f7"
                    android:textStyle="bold"/>

            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/pay1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/paymentInfo_FullName"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:hint="Full name"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textSize="20sp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/boarder_payment"
                    android:fontFamily="sans-serif-condensed"/>

            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#8e8a8a"
                android:layout_marginTop="5dp"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/paymentInfo_Address1"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:inputType="text"
                    android:hint="Address Line 1"
                    android:maxLines="1"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/boarder_payment"
                    android:fontFamily="sans-serif-condensed"/>


            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#8e8a8a"
                android:layout_marginTop="5dp"/>


            <EditText
                android:id="@+id/paymentInfo_Address2"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:inputType="text"
                android:maxLines="1"
                android:hint="Address Line 2"
                android:textSize="20sp"
                android:background="@drawable/boarder_payment"
                android:fontFamily="sans-serif-condensed"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#8e8a8a"
                android:layout_marginTop="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/paymentInfo_City"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:hint="City"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textSize="20sp"
                        android:background="@drawable/boarder_payment"
                        android:fontFamily="sans-serif-condensed"/>


                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/paymentInfo_State"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:hint="State"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textSize="20sp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/boarder_payment"
                        android:fontFamily="sans-serif-condensed"/>


                </android.support.design.widget.TextInputLayout>


            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#8e8a8a"
                android:layout_marginTop="5dp"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/paymentInfo_Phone"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:hint="Phone"
                    android:maxLines="1"
                    android:inputType="phone"
                    android:textSize="20sp"
                    android:background="@drawable/boarder_payment"
                    android:fontFamily="sans-serif-condensed"/>


            </android.support.design.widget.TextInputLayout>



            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#8e8a8a"
                android:layout_marginTop="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="#4CAF50"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PAYMENT INFO"
                    android:layout_gravity="center"
                    android:layout_marginTop="6dp"
                    android:textSize="20sp"
                    android:textColor="#f9f7f7"
                    android:textStyle="bold"/>

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#8e8a8a"
                android:layout_marginTop="5dp"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/paymentInfo_NameOnCard"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:hint="Name on card"
                    android:maxLines="1"
                    android:inputType="text"
                    android:textSize="20sp"
                    android:background="@drawable/boarder_payment"
                    android:fontFamily="sans-serif-condensed"/>


            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#8e8a8a"
                android:layout_marginTop="5dp"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/paymentInfo_CardNumber"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:hint="Card Number"
                    android:maxLines="1"
                    android:inputType="number"
                    android:textSize="20sp"
                    android:background="@drawable/boarder_payment"
                    android:fontFamily="sans-serif-condensed"/>

            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#8e8a8a"
                android:layout_marginTop="5dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/paymentInfo_ExpDate"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:hint="Expiry date"
                        android:inputType="number"
                        android:maxLines="1"
                        android:textSize="20sp"
                        android:background="@drawable/boarder_payment"
                        android:fontFamily="sans-serif-condensed"/>


                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/paymentInfo_CVV"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:hint="CVV"
                        android:inputType="number"
                        android:layout_marginStart="10dp"
                        android:maxLines="1"
                        android:textSize="20sp"
                        android:background="@drawable/boarder_payment"
                        android:fontFamily="sans-serif-condensed"/>

                </android.support.design.widget.TextInputLayout>


            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#8e8a8a"
                android:layout_marginTop="5dp"/>



        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="#4CAF50"
        android:orientation="horizontal">


        <Button
            android:id="@+id/paymentInfo_ContinueButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_weight="1"
            android:text="UPDATE ACCOUNT"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_marginStart="20dp"
            android:textSize="15sp"/>

    </LinearLayout>

</RelativeLayout>
