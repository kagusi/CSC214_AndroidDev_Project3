<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
             tools:context="assignment02.csc214.project3.Driver.ProceedToDeliveryFragment">

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#1b1b1a"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:text="Above map guides you from your current location to customer's delivery address"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#8e8a8a"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#1b1b1a"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:text="Once you finish shopping, click 'Proceed to Delivery' to notify the customer that you are on your way to deliver his/her grocery"/>


    <Button
        android:id="@+id/ProceedDelivery_ProceedButtonTextView"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#4CAF50"
        android:text="PROCEED TO DELIVERY"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"/>


</LinearLayout>
