<ScrollView
    android:id="@+id/Scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="assignment02.csc214.project3.Customer.OrderSuccessFragment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="90dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="90dp">

            <LinearLayout android:focusable="true"
                          android:focusableInTouchMode="true"
                          android:layout_width="0px"
                          android:layout_height="0px" >
                <requestFocus />
            </LinearLayout>

            <TextView
                android:id="@+id/TextVi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thank You for choosing Zap Shoppers!"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:textColor="#070707"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"/>

            <LinearLayout
                android:id="@+id/LinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:padding="10dp"
                android:layout_below="@+id/TextVi"
                android:background="@drawable/innercustom_border">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="#4CAF50"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ORDER WAS SUCCESSFULL!"
                        android:typeface="monospace"
                        android:layout_gravity="center"
                        android:layout_marginTop="3dp"
                        android:textSize="20sp"
                        android:textColor="#f9f7f7"
                        android:textStyle="bold"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Order Number: "
                        android:typeface="monospace"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/OrderSuceess_OrderNumber"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="939493JK"
                        android:typeface="monospace"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Order Total: "
                        android:typeface="monospace"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/OrderSuceess_OrderTotal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="$87.45"
                        android:typeface="monospace"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#8e8a8a"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/OrderSuceess_WillbeDeliveredBy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your groccery will be delivered by James Monroe within few minutes"
                    android:typeface="monospace"
                    android:textSize="20sp"
                    android:textStyle="bold|italic"
                    android:textColor="#2E7D32"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>

            <Button
                android:id="@+id/OrderSuceess_TrackDelivery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?android:attr/buttonBarButtonStyle"
                android:text="TRACK ORDER"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:background="#4CAF50"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/LinearLayout"/>

        </RelativeLayout>

    </ScrollView>
