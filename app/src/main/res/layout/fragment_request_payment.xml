<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
             tools:context="assignment02.csc214.project3.Driver.RequestPaymentFragment">

    <LinearLayout android:focusable="true"
                  android:focusableInTouchMode="true"
                  android:layout_width="0px"
                  android:layout_height="0px" >
        <requestFocus />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="90dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Total Commission Earned:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#f9f7f7"
            android:background="#4CAF50"/>

        <TextView
            android:id="@+id/RequestPayment_TotalCommTextView"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="$343.34"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#f9f7f7"
            android:background="#6F9C33"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="90dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Total Unpaid Earned:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#f9f7f7"
            android:background="#4CAF50"/>

        <TextView
            android:id="@+id/RequestPayment_UnpaidCommTextView"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="$245.34"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#f9f7f7"
            android:background="#6F9C33"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:background="@drawable/innercustom_border">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="#2E7D32"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ENTER BANK INFO"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:textSize="25sp"
                android:textColor="#f9f7f7"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Name:"
                android:textStyle="bold"
                android:textSize="23sp"
                android:textColor="#212020"
                android:fontFamily="sans-serif-condensed"/>

            <EditText
                android:id="@+id/RequestPayment_FullNameTextView"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:hint="Enter your name"
                android:inputType="text"
                android:maxLines="1"
                android:textSize="20sp"
                android:layout_marginStart="10dp"
                android:background="@drawable/boarder_payment"
                android:fontFamily="sans-serif-condensed"/>

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#8e8a8a"
            android:layout_marginTop="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bank Name:"
                android:textStyle="bold"
                android:textSize="23sp"
                android:textColor="#212020"
                android:fontFamily="sans-serif-condensed"/>

            <EditText
                android:id="@+id/RequestPayment_BankNameTextView"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:maxLines="1"
                android:inputType="text"
                android:hint="Enter bank name"
                android:textSize="20sp"
                android:layout_marginStart="10dp"
                android:background="@drawable/boarder_payment"
                android:fontFamily="sans-serif-condensed"/>

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#8e8a8a"
            android:layout_marginTop="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account Number:"
                android:textStyle="bold"
                android:textSize="23sp"
                android:textColor="#212020"
                android:fontFamily="sans-serif-condensed"/>

            <EditText
                android:id="@+id/RequestPayment_AccountNumberTextView"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:hint="Enter account number"
                android:inputType="number"
                android:maxLines="1"
                android:textSize="20sp"
                android:layout_marginStart="10dp"
                android:background="@drawable/boarder_payment"
                android:fontFamily="sans-serif-condensed"/>

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#8e8a8a"
            android:layout_marginTop="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Routing Number:"
                android:textStyle="bold"
                android:textSize="23sp"
                android:textColor="#212020"
                android:fontFamily="sans-serif-condensed"/>

            <EditText
                android:id="@+id/RequestPayment_RoutingNumberTextView"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:hint="Enter routing number"
                android:maxLines="1"
                android:inputType="number"
                android:textSize="20sp"
                android:layout_marginStart="10dp"
                android:background="@drawable/boarder_payment"
                android:fontFamily="sans-serif-condensed"/>

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#8e8a8a"
            android:layout_marginTop="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/RequestPayment_SubmitButtonTextView"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#4CAF50"
                android:text="SUBMIT"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold"/>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>
